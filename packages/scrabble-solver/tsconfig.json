{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "paths": {
      "api": ["./src/api"],
      "components": ["./src/components"],
      "const": ["./src/const"],
      "hooks": ["./src/hooks"],
      "icons": ["./src/icons"],
      "i18n": ["./src/i18n"],
      "lib": ["./src/lib"],
      "pages": ["./src/pages"],
      "sdk": ["./src/sdk"],
      "state": ["./src/state"],
      "styles": ["./src/styles"],
      "types": ["./src/types"]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "exclude": ["node_modules"],
  "files": ["./src/@types/svg.d.ts"],
  "include": ["next-env.d.ts", "./src"]
}
